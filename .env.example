# Flask Application Secret Key (Required for session management)
# Generate a secure key using: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-very-secure-random-key-here

# Terminal Connect API Configuration
# Merchant ID (MID) - Your unique merchant identifier
MID=12345

# Terminal ID (TID) - Your terminal identifier
TID=WP12345X67890123

# API Key - Your Terminal Connect API key
# Keep this secure and never share it
API_KEY=XXXXX-XXXXX-XXXXX-XXXXX

# Postback URL - Webhook endpoint for transaction notifications
# Example for local testing: http://localhost:5000/webhook
# For production: https://your-domain.com/webhook
POSTBACK_URL=https://your-domain.com/webhook
